<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_post_card_viev"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="10dp"
    app:cardBackgroundColor="#fff"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_post_background"
        android:orientation="horizontal"
        android:padding="1sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="27">

        <ImageView
            android:id="@+id/item_post_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:contentDescription="@string/item_post_image_description"
            android:padding="5sp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/item_post_title_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_post_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_post_title_label"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_pin_date_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorSecondaryText"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>